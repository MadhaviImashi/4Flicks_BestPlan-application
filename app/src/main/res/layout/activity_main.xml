<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF9C0A"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="BestPlan"
        app:titleMarginStart="30dp"
        app:titleTextColor="#FFFFFF" />


    <Button
        android:id="@+id/btnNavBMI"
        android:layout_width="187dp"
        android:layout_height="76dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/roundstyle"
        android:onClick="displayBMIactivity"
        android:text="@string/btnFindbmi"
        app:backgroundTint="@color/homeNavBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/allRecipesBtn"
        android:layout_width="185dp"
        android:layout_height="72dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/roundstyle"
        android:onClick="displayAllRecipesWithRecipes"
        android:text="@string/btnCheckRec"
        app:backgroundTint="@color/homeNavBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNavBMI" />

    <Button
        android:id="@+id/button12"
        android:layout_width="182dp"
        android:layout_height="72dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/roundstyle"
        android:onClick="displayaddmeal"
        android:text="@string/btnPlanMeal"
        app:backgroundTint="@color/homeNavBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allRecipesBtn" />

    <Button
        android:id="@+id/btnGrocery"
        android:layout_width="179dp"
        android:layout_height="71dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/roundstyle"
        android:onClick="goToGroceryListHome"
        android:text="@string/btnChkGro"
        app:backgroundTint="@color/homeNavBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button12" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="84dp"
        android:layout_height="90dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="63dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnNavBMI"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/weight" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="85dp"
        android:layout_height="89dp"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="61dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/allRecipesBtn"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:srcCompat="@drawable/recipe" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="85dp"
        android:layout_height="90dp"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="61dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button12"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        app:srcCompat="@drawable/fdap" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="83dp"
        android:layout_height="88dp"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnGrocery"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:srcCompat="@drawable/groceries" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="138dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="133dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/TvWelBestPlan"
        android:textColor="#955D0B"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>